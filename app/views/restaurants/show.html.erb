<div class="container my-5 w-50">
  <div class="d-flex flex-column align-items-center justify-content-center">
    <h2><%= @restaurant.name%></h2>
    <p style="margin-bottom: 0;"><%= @restaurant.phone_number %></p>
    <p style="margin-bottom: 0;"><%= @restaurant.address %></p>
  </div>
  <hr>
  <div class="text-center">
  <p style="font-size: 18px;">- Reviews</p>
  </div>

  <div>
    <ol class="list-group list-group-flush">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="my-auto d-flex align-items-center">
            <p><%= review.content %></p>
          </div>
          <span class="badge bg-secondary rounded-pill"><%= "Rating: #{review.rating}/5" %></span>
        </li>
      <% end %>
    </ol>
  </div>

  <div class="d-flex flex-row align-items-center justify-content-evenly mt-5">
    <%= link_to "New Review", new_restaurant_review_path(@restaurant), class:"btn btn-sm btn-outline-secondary" %>
    <%= link_to "All Restaurants", restaurants_path, class:"btn btn-sm btn-outline-secondary" %>
  </div>
</div>
