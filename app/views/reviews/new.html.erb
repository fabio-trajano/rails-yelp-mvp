<div class="container" style="width: 70%;">
  <div class="text-center m-4">
    <h2>New review</h2>
  </div>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: %w(1 2 3 4 5) %>
    <%= f.submit "Submit review", class: "btn btn-outline-primary mt-3" %>
  <% end %>
</div>
